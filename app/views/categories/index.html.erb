<!-- app/views/categories/index.html.erb -->
<div class="banner" style="background-image: url('<%= image_path "banner.jpg" %>')">
  <div>
    <h1>Cookbook</h1>
    <h3>Save your favourite recipes</h3>
  </div>
</div>

<div class="container">

<div class="info-top">
<h1>Categories</h1>
<%= link_to "Add Category", new_category_path, class: 'btn btn-warning' %>
</div>

<div class="cards">
    <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
        <div class = "card-category" style ="background-image: url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <div>
            <h2><%= category.name %></h2>
            <p><%= category.bookmarks.count %>recipes</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
